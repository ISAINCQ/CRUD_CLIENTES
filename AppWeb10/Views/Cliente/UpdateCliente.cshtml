@model ClienteModel
@{
}

<h2>Actualizar Cliente</h2>

<form asp-action="UpdateCliente" asp-controller="Cliente" method="post">
    <input type="hidden" asp-for="IdCliente" value="@Model.IdCliente" id="IdCliente"/>
    <div >
        <label class="form-label" for="Nombre">Nombre</label>
        <input class="form-control"  type="text" asp-for="Nombre" value="@Model.Nombre" id="Nombre" placeholder="Escriba Nombre del Cliente" />
    </div>
    <div>
        <label class="form-label" for="Edad">Edad</label>
        <input class="form-control" type="text" asp-for="Edad" value="@Model.Edad" id="Edad" placeholder="Ingrese Edad del Cliente" />
    </div>
    <div>
        <label class="form-label" for="FechaNacimiento">FechaNacimiento</label>
        <input class="form-control" type="date" asp-for="FechaNacimiento" value="@Model.FechaNacimiento.ToString("yyyyy-MM-dd")" id="FechaNacimiento" />
    </div>
    <div>
        <input type="checkbox" asp-for="MayorEdad" value="@Model.MayorEdad" id="MayorEdad" />
        <label class="form-label" for="MayorEdad">MayorEdad</label>
    </div>
    <button class="btn btn-primary" type="submit">Enviar</button>
</form>
